<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.detail.DetailFragment"
    android:background="@drawable/winter_portrait">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:contentDescription="@string/choose_place"
        android:src="@drawable/ic_baseline_place_24"
        tools:ignore="RtlHardcoded"
        android:layout_margin="20dp"
        android:backgroundTint="@color/orange"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/weather_element"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="10dp"
        android:elevation="10dp"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:text="@string/weather_city"
                android:textSize="18sp"
                android:textStyle="normal"
                android:textColor="@color/orange"/>

            <TextView
                android:id="@+id/tv_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:text="@string/data"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="@color/blue_1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:padding="8dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/temperature"
                        android:textColor="@color/blue"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/description"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/humidity"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/orange"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pressure"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/green"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wind"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/blue_1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/visibility"
                        android:textColor="@color/blue"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sea_level"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/orange"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/temperature_min"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/green"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/temperature_max"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/blue_1"/>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/purple_700"
                    android:layout_marginStart="8dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:ignore="UselessParent"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_temperature"
                        android:text="@string/temperature"
                        android:textColor="@color/blue"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_description"
                        android:text="@string/description"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_humidity"
                        android:text="@string/humidity"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/orange"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_pressure"
                        android:text="@string/pressure"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/green"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_wind"

                        android:text="@string/wind"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/blue_1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_visibility"
                        android:text="@string/visibility"
                        android:textColor="@color/blue"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_sea_level"
                        android:text="@string/sea_level"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/orange"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_temp_min"
                        android:text="@string/temperature_min"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/green"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_temp_max"
                        android:text="@string/temperature_max"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/blue_1"/>
                </LinearLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="25dp"
                        app:cardCornerRadius="20dp"
                        android:elevation="15dp"
                        >
                        <ImageView
                            android:id="@+id/image_icon"
                            android:backgroundTint="@color/blue"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:src="@tools:sample/avatars"
                            android:contentDescription="@string/icon" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/btn_5_days"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="25dp"
                        app:cardCornerRadius="20dp"
                        android:elevation="10dp"
                        >
                        <ImageView
                            android:id="@+id/image_5_day"
                            android:backgroundTint="@color/blue"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/black"
                            android:src="@drawable/weather_detail"
                            android:contentDescription="@string/icon" />
                    </androidx.cardview.widget.CardView>

                </FrameLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="32dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>